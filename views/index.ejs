<html lang="en">
<head>
    <meta charset="UTF-8">
    <title>Judger</title>
    <link href="../css/sb-admin-2.min.css" rel="stylesheet">
    <link href="../css/mdb.min.css" rel="stylesheet">

</head>
<body class="winter-neva-gradient">
    <div class="container">
        <div class="row">
          <div class="col-sm-9 col-md-7 col-lg-4 mx-auto">
            <div class="card o-hidden border-0 shadow-lg my-5">
              <div class="card-body">
                <div class="text-center">
                    <h1 class="h4 text-gray-900 mb-4">Sign In</h1>
                </div>
                <% if (message.length > 0) { %>
                <div class="alert alert-danger col-sm-12 animated shake fast" align=center><%= message %></div>
                <% } %>
                <form class="user" method="POST" action="/login">
                    <div class="form-group">
                        <input type="text" class="form-control form-control-user" name="user_name"
                            placeholder="Enter Username...">
                    </div>
                    <div class="form-group">
                        <input type="password" class="form-control form-control-user" name="password"
                            placeholder="Password">
                    </div>
                    <div class="form-group">
                        <!-- Material inline 1 -->
                        <div class="form-check form-check-inline">
                            <input type="radio" class="form-check-input" id="materialInline1" name="role" checked
                                value="Student">
                            <label class="form-check-label" for="materialInline1">Student</label>
                        </div>

                        <!-- Material inline 2 -->
                        <div class="form-check form-check-inline">
                            <input type="radio" class="form-check-input" id="materialInline2" name="role"
                                value="Teacher">
                            <label class="form-check-label" for="materialInline2">Teacher</label>
                        </div>
                    </div>
                    <button type="submit" class="btn btn-primary btn-user btn-block">Login </button>
                </form>
              </div>
            </div>
          </div>
        </div>
      </div>

</body>

</html>