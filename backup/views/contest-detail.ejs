<%- include ("partials/header") %>
<!-- Main component for a primary marketing message or call to action -->

<div class="container">

    <!-- Page Heading -->
    <h2>Total <%= data.length %> student in contest <%= contest_name %>
        <button type="button" class="btn btn-success"
            onclick="window.location='/contest/add-user?contest_id=<%=contest_id%>';">
            <i class="fa fa-plus fa-lg"></i> Add student
        </button>
        <button type="button" class="btn btn-success"
            onclick="window.location='/contest/add-problem?contest_id=<%=contest_id%>';">
            <i class="fa fa-plus fa-lg"></i> Add problem and testcase
        </button>
    </h2>
    <% if (message.length > 0) { %>
    <div class="alert alert-success col-sm-12"><%= message %></div>
    <% } %>
    <!-- DataTales Example -->
    <div class="card shadow mb-4">
        <div class="card-body">
            <table class="table table-bordered" id="dataTable" width="100%" cellspacing="0">
                <thead>
                    <tr>
                        <th width=5%>
                            <center>
                                <button type="button" style="border: none; background: transparent; font-size: 14px;"
                                    id="MyTableCheckAllButton">
                                    <i class="far fa-square"></i>
                                </button>
                            </center>
                        </th>
                        <th></th>
                        <th>Roll number</th>
                        <th>Name</th>
                        <th>Class</th>
                    </tr>
                </thead>
                <tbody>
                    <% for (let i = 0; i < data.length; ++i) {%>
                    <tr>
                        <td></td>
                        <td></td>
                        <td><%= data[i].student_rollnumber %></td>
                        <td><%= data[i].name %></td>
                        <td><%= data[i].class %></td>
                    </tr>
                    <% } %>
                </tbody>
            </table>
            <form action="/contest/delete-user" method="post">
                <input type="hidden" id="list_rollnumber" name="list_rollnumber" value="">
                <input type="hidden" name="contest_id" value="<%=contest_id%>">
                <button type="submit" class="btn btn-danger">
                    <i class="fa fa-trash-alt "> Delete selected</i>
                </button>
            </form>
        </div>
    </div>

</div>

<%- include ("partials/footer") %>